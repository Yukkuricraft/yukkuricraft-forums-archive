{
  "name": "@yukkuricraft-forums-archive/database",
  "type": "module",
  "scripts": {
    "db:generate": "prisma generate",
    "build": "tsc && yarn copy-prisma",
    "copy-prisma": "copyfiles ./generated/prisma/** ./dist",
    "check-types": "tsc --noEmit",
    "lint": "eslint",
    "fixlint": "eslint --fix"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/src/index.js"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./dist/src/client.js"
    },
    "./kysely": {
      "types": "./src/kysely.ts",
      "default": "./dist/src/kysely.js"
    },
    "./sql": {
      "types": "./src/sql.ts",
      "default": "./dist/src/sql.js"
    }
  },
  "private": true,
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "prisma": "^7.0.0"
  },
  "devDependencies": {
    "@prisma/client": "^7.0.0",
    "@types/copyfiles": "^2.4.4",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@yukkuricraft-forums-archive/eslint-config": "workspace:*",
    "@yukkuricraft-forums-archive/ts-config": "workspace:*",
    "copyfiles": "^2.4.1",
    "prisma-kysely": "^2.2.1",
    "typescript": "^5.9.3"
  }
}
